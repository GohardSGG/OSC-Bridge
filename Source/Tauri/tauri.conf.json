{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OSC-Bridge",
  "version": "2.1.8",
  "identifier": "com.osc-bridge.app",
  "build": {
    "beforeDevCommand": "npm run vite-dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run vite-build",
    "frontendDist": "../../Build/Frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* http://localhost:*"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../Resource/config_pure.json"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/install.nsh",
        "installMode": "perMachine",
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}